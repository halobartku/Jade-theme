	"name": "Collection",
	"settings": [
		{
			"type": "checkbox",
			"id": "show_breadcrumbs",
			"label": "Show breadcrumbs",
			"default": true,
			"info": "This setting only concerns the display of breadcrumbs on the banner, the setting works when the image is added to a collection. . To disable the breadcrumbs site-wide, please go to Theme Settings â†’ Breadcrumbs."
		},
		{
			"type": "checkbox",
			"id": "show_img",
			"label": "Show collection image",
			"default": true
		},
		{
			"type": "checkbox",
			"id": "show_description",
			"label": "Show collection description",
			"default": true
		},
		{
			"type": "image_picker",
			"id": "custom_image",
			"label": "Custom image",
			"info": "3776 x 914px recommended"
		},
		{
			"type": "select",
