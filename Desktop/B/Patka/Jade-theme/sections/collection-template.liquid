		{
			"type": "checkbox",
			"id": "show_color_swatch_in_filters",
			"label": "Show color swatch in filters",
			"default": false
		},
		{
			"type": "select",
			"id": "filters_type",
			"label": "Filters type",
			"options": [
				{
					"value": "drawer",
					"label": "Drawer"
