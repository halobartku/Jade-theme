{% comment %}
------------------------------------------------------------------------------
  Section: Featured Product
------------------------------------------------------------------------------
{% endcomment %}
{%- assign product						= section.settings.product -%}
{%- assign container 					= section.settings.container_width -%}
{%- assign ui_button_color				= section.settings.ui_button_color -%}
{%- assign ui_button_background_color	= section.settings.ui_button_background_color -%}
{%- assign ui_button_border_color		= section.settings.ui_button_border_color -%}

{% if container == 'inherit' %}
	{% assign container_width = settings.container_width %}
{% else %}
	{% assign container_width = container %}
{% endif %}

{%- render 'adastra' with '/src/styles/carousel.scss' -%}
{%- render 'adastra' with '/src/styles/product.scss' -%}

{%- render 'adastra' with '/src/scripts/section-featured-product.js' -%}

{%- style -%}
	#shopify-section-{{- section.id -}} {
		padding-top: {{- section.settings.offset_top_mobile -}}px;
		padding-bottom: {{- section.settings.offset_bottom_mobile -}}px;
	}

	@media screen and (min-width: 768px) {
		#shopify-section-{{- section.id -}} {
			padding-top: {{- section.settings.offset_top_desktop -}}px;
			padding-bottom: {{- section.settings.offset_bottom_desktop -}}px;
		}
	}
{%- endstyle -%}

{%- capture section_styles -%}
	--container-width: {{- container_width -}}; {{-  -}}
	--ui-button-color: {{- ui_button_color -}}; {{-  -}}
	--ui-button-background-color: {{- ui_button_background_color -}}; {{-  -}}
	--ui-button-border-color: {{- ui_button_border_color -}}; {{-  -}}
	--ui-model-view-button-background-color: {{- ui_button_background_color | color_darken: 5 -}}; {{-  -}}
	--image-object-fit: {{- section.settings.image_object_fit -}}; {{-  -}}
{%- endcapture -%}

{% assign is_preset = false %}

{% if product == blank %}
	{% assign is_preset = true %}
{% endif %}

<section
	class="product product-featured js-animate {% if request.visual_preview_mode or section.index == 1 %}animated{% endif %}"
	style="{{ section_styles }}"
	data-section-type="product"
	data-is-preset="{{- is_preset -}}"
	data-section-id="{{- section.id -}}"
	data-url="{{- product.url -}}"
>
	{%- include 'product-media', media_height: section.settings.media_height -%}
	{%- include 'product-form', blocks: section.blocks -%}
	{%- render 'product-drawers-content', product: product, section: section, blocks: section.blocks -%}
</section>

