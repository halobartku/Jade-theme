		--header-position: {% if enable_sticky_header == true %}sticky{% else %}static{% endif %};
		--header-background: {{ header_bg -}};
		--header-background-transparent: {{ header_bg_transparent | color_modify: 'alpha', background_opacity -}};
		--header-background-blur: {{ background_blur -}}px;
		--header-mobile-menu-bg: {{ mobile_menu_bg -}};
		--header-text-color: {{ text_color -}};
		--header-main-mega-menu-text-color: {{ main_mega_menu_text_color -}};
		--header-main-mega-menu-background-color: {{ main_mega_menu_background_color -}};
		--header-main-mega-menu-text-color-selected: {{ main_mega_menu_text_color_selected -}};
		--header-main-mega-menu-background-color-selected: {{ main_mega_menu_background_color_selected -}};
		--header-transparent-text-color: {{ text_color_transparent -}};
		--header-text-color-half: {{ text_color | color_modify: 'alpha', 0.55 -}};
		--header-icon-color: {{ icon_color -}};
		--header-transparent-icon-color: {{ icon_color_transparent -}};
		--header-count-text-color: {{ count_text_color -}};
