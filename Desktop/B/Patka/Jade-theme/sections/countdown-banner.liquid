					{% if enable_lazy_load %}
						data-srcset="{{ image_mobile | img_url: x1_420, crop: 'center' }} 1x, {{ image_mobile | img_url: x2_420, crop: 'center' }} 2x"
						srcset="{{ image_mobile | img_url: '10x' }} 1x, {{ image_mobile | img_url: '10x' }} 2x"
					{% else %}
