						srcset="{{ image_mobile | img_url: '10x' }} 1x, {{ image_mobile | img_url: '10x' }} 2x"
					{% else %}
						srcset="{{ image_mobile | img_url: x1_480, crop: 'center' }} 1x, {{ image_mobile | img_url: x2_480, crop: 'center' }} 2x"
					{% endif %}
					media="(max-width: 480px)"
					width="448"
					height="254"
				/>

