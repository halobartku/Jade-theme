					{% else %}
						src="{{- image_desktop | img_url: x1_1920, crop: 'center' -}}"
						srcset="{{ image_desktop | img_url: x1_1920, crop: 'center' }} 1x, {{ image_desktop | img_url: x2_1920, crop: 'center' }} 2x"
