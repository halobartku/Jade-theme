					>
						<div class="stores-locator__item-box-info">
							{%- for item in (1..2) -%}
								{%- capture icon -%}
									icon-{{- item -}}
								{%- endcapture -%}

								{%- capture text -%}
									text-{{- item -}}
								{%- endcapture -%}

