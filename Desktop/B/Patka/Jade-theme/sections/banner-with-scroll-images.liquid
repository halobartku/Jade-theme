			{
				"type": "text",
				"id": "button_aria_label",
				"label": "Button aria-label",
				"default": "Button aria-label"
			},
			{
				"type": "url",
				"id": "button_link",
				"label": "Button link",
				"default": "/"
			},
			{
				"id": "button_style",
				"type": "select",
				"label": "Button style",
