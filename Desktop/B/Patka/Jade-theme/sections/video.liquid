			},
			{
				"type": "color",
				"id": "button_background_color_play_hover",
				"label": "Background (hover)",
				"default": "#000000"
			},
			{
				"type": "range",
				"id": "offset_top_desktop",
				"min": 0,
				"max": 100,
				"step": 1,
				"unit": "px",
				"label": "Desktop offset top",
				"default": 32
			},
			{
				"type": "range",
				"id": "offset_bottom_desktop",
				"min": 0,
