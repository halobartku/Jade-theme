{%- comment -%}
------------------------------------------------------------------------------
	Section: Slideshow
------------------------------------------------------------------------------
{%- endcomment -%}

{%- assign show_arrows 			  = section.settings.show_arrows -%}
{%- assign show_thumbnails		  = section.settings.show_thumbnails -%}
{%- assign show_pagination 		  = section.settings.show_pagination -%}
{%- assign show_progress_bar 	  = section.settings.show_progress_bar -%}
{%- assign enable_loop 			  = section.settings.enable_loop -%}
{%- assign enable_autoplay 		  = section.settings.enable_autoplay -%}
{%- assign autoplay_speed 		  = section.settings.autoplay_speed | times: 1000 -%}
{%- assign animation_speed 		  = section.settings.animation_speed | times: 1000 -%}
{%- assign animation_type 		  = section.settings.animation_type -%}
{%- assign effect 				  = animation_type -%}
{%- assign blocks = section.blocks -%}
{%- assign parallax 			  = false -%}
{%- assign enanle_thumbnails	  = false -%}



{%- if blocks.size > 1 and show_thumbnails == true -%}
	{%- assign enanle_thumbnails = true -%}
{%- endif -%}

{% if enanle_thumbnails == true %}
	{%- assign show_arrows = false %}
{% endif %}

{%- if effect == 'parallax' -%}
	{%- assign effect 	= 'slide' -%}
	{%- assign parallax = true -%}
{%- endif -%}

{%- assign height_desktop 					= section.settings.height_desktop | append: "vh" -%}
{%- assign height_mobile 					= section.settings.height_mobile | append: "vh"  -%}
{%- assign subtract_header_height			= section.settings.subtract_header_height -%}
{%- assign background_color 				= section.settings.background_color -%}
{%- assign pagination_color					= section.settings.pagination_color -%}
{%- assign pagination_color_opacity        	= section.settings.pagination_color_opacity | times: 0.01 -%}
{%- assign pagination_color_active        	= section.settings.pagination_color_active -%}
{%- assign progress_bar_color 				= section.settings.progress_bar_color -%}

{%- assign arrows_background_color 					= section.settings.arrows_background_color -%}
{%- assign arrows_background_color_opacity  		= section.settings.arrows_background_color_opacity | times: 0.01 -%}
{%- assign arrows_color 							= section.settings.arrows_color -%}
{%- assign arrows_border_color 						= section.settings.arrows_border_color -%}
{%- assign arrows_border_color_opacity      		= section.settings.arrows_border_color_opacity | times: 0.01 -%}
{%- assign arrows_background_color_hover 			= section.settings.arrows_background_color_hover -%}
{%- assign arrows_background_color_opacity_hover 	= section.settings.arrows_background_color_opacity_hover | times: 0.01 -%}
{%- assign arrows_color_hover						= section.settings.arrows_color_hover -%}
{%- assign arrows_border_color_hover 				= section.settings.arrows_border_color_hover -%}
{%- assign arrows_border_color_opacity_hover        = section.settings.arrows_border_color_opacity_hover | times: 0.01 -%}

{%- assign thumbnail_border_color_active 			= section.settings.thumbnail_border_color_active -%}
{%- assign thumbnails_background_color 				= section.settings.thumbnails_background_color -%}
{%- assign thumbnails_background_color_opacity      = section.settings.thumbnails_background_color_opacity | times: 0.01 -%}

{%- assign container 						= section.settings.container_width -%}

{%- if container == 'inherit' -%}
	{%- assign container_width = settings.container_width -%}
{%- else -%}
	{%- assign container_width = container -%}
{%- endif -%}

{%- if subtract_header_height -%}
	{%- assign height_desktop	= "calc(" | append: height_desktop | append: " - var(--header-height-static, calc(40px + ((var(--body-font-size, 16px) * 1.25 / 1.5) * 2) + (var(--body-font-size, 16px) * 1.15))) - var(--header-offset-top-static, calc(28px + (var(--body-font-size) * 0.875 * 1.6))))" -%}
	{%- assign height_mobile	= "calc(" | append: height_mobile | append: " - var(--header-height-static, calc(40px + ((var(--body-font-size, 16px) * 1.25 / 1.5) * 2) + (var(--body-font-size, 16px) * 1.15))) - var(--header-offset-top-static, calc(28px + (var(--body-font-size) * 0.875 * 1.6))))" -%}
{%- endif -%}

{%- capture slider_settings -%}
	{
		"slidesPerView": 1,
		"grabCursor": true,
		"loop": {{ enable_loop -}},
		"speed": {{ animation_speed -}},
		"effect": "{{- effect -}}",
		"parallax": {{ parallax -}},
		"spaceBetween": 16,
		{%- if effect == "creative" %}
		"creativeEffect": {
			"prev": {
				"shadow": true,
				"translate": ["-20%", 0, -1]
			},
			"next": {
				"translate": ["100%", 0, 0]
			}
		},
		{%- endif -%}
		{%- if show_arrows %}
		"navigation": {
			"nextEl": ".js-swiper-button-next",
			"prevEl": ".js-swiper-button-prev"
		},
		{%- endif -%}
		{% if show_pagination -%}
		"pagination": {
			"el": ".swiper-pagination",
			"clickable": true,
			{% if blocks.size > 5 -%}
				"dynamicBullets": true,
			{%- endif %}
			"bulletElement": "button"
		},
		{%- endif -%}
		{% if enable_autoplay -%}
		"autoplay": {
			"delay": {{- autoplay_speed -}},
			"disableOnInteraction": false
			},
		{%- else -%}
		"autoplay": false,
		{%- endif %}
		"a11y": {
			"prevSlideMessage": {{ "general.accessibility.slider.prev_slide_message" | t  | json -}},
			"nextSlideMessage": {{ "general.accessibility.slider.next_slide_message" | t | json -}},
			"firstSlideMessage": {{ "general.accessibility.slider.first_slide_message" | t | json -}},
			"lastSlideMessage": {{ "general.accessibility.slider.last_slide_message" | t | json -}},
			"slideLabelMessage": {{ "general.accessibility.slider.slide_label_message" | t | json -}},
			"paginationBulletMessage": {{ "general.accessibility.slider.pagination_bullet_message" | t | json }}
		}
	}
{%- endcapture -%}

{%- capture section_styles  -%}
	--height-desktop: {{ height_desktop -}}; {{-  -}}
	--height-mobile: {{ height_mobile -}}; {{-  -}}
	--background-color: {{ background_color -}}; {{-  -}}
	--progress-bar-color: {{ progress_bar_color -}}; {{-  -}}
	--progress-bar-body-color: {{ progress_bar_color | color_modify: 'alpha', 0.3  -}}; {{-  -}}
	--pagination-color: {{ pagination_color -}}; {{-  -}}
	--pagination-color: {{ pagination_color | color_modify: 'alpha', pagination_color_opacity -}}; {{-  -}}
	--pagination-color-active: {{ pagination_color_active -}}; {{-  -}}
	--arrows-background-color: {{ arrows_background_color | color_modify: 'alpha', arrows_background_color_opacity -}}; {{-  -}}
	--arrows-color: {{ arrows_color -}}; {{-  -}}
	--arrows-border-color: {{ arrows_border_color | color_modify: 'alpha', arrows_border_color_opacity -}}; {{-  -}}
	--arrows-background-color-hover: {{ arrows_background_color_hover | color_modify: 'alpha', arrows_background_color_opacity_hover -}}; {{-  -}}
	--arrows-color-hover: {{ arrows_color_hover -}}; {{-  -}}
	--arrows-border-color-hover: {{ arrows_border_color_hover | color_modify: 'alpha', arrows_border_color_opacity_hover -}}; {{-  -}}
	--thumbnail-border-color-active: {{ thumbnail_border_color_active }}; {{-  -}}
	--thumbnails-background-color: {{ thumbnails_background_color | color_modify: 'alpha', thumbnails_background_color_opacity }}; {{-  -}}
	--slide-speed: {{ animation_speed }}ms;
	--container-width: {{- container_width -}};
	--iframe-container-width: {%- if container_width == "100%" -%}100vw{%- else -%}{{- container_width -}}{%- endif -%};
{%- endcapture -%}

{%- assign slider_classes = 'slideshow__slider' -%}

{% if blocks.size > 1 %}
	{%- assign slider_classes = slider_classes | append: ' swiper' -%}
{%- endif %}

{%- assign slider_classes = slider_classes | append: ' js-slider' -%}

{%- if blocks.size > 0 -%}
	{%- render 'adastra' with '/src/styles/carousel.scss' -%}
	{%- render 'adastra' with '/src/styles/slideshow.scss' -%}

	{%- style -%}
		#shopify-section-{{- section.id -}} {
			padding-top: {{- section.settings.offset_top_mobile -}}px;
			padding-bottom: {{- section.settings.offset_bottom_mobile -}}px;
		}

		@media screen and (min-width: 768px) {
			#shopify-section-{{- section.id -}} {
				padding-top: {{- section.settings.offset_top_desktop -}}px;
				padding-bottom: {{- section.settings.offset_bottom_desktop -}}px;
			}
		}
	{%- endstyle -%}

	<section
		class="slideshow js-slideshow"
		id="{{- section.id -}}"
		style="{{- section_styles -}}"
	>
		<div class="slideshow__container">
			<div class="{{- slider_classes -}}">
				<div class="slideshow__slider-wrapper {% if blocks.size > 1 %} swiper-wrapper{%- endif -%}">
					{%- for block in blocks -%}
						{%- assign heading 					= block.settings.heading -%}
						{%- assign description 				= block.settings.description -%}
						{%- assign button_text 				= block.settings.button_text -%}
						{%- assign button_aria_label		= block.settings.button_aria_label -%}
						{%- assign button_link 				= block.settings.button_link -%}
						{%- assign open_in_new_tab 			= block.settings.open_in_new_tab -%}
						{%- assign make_link_full_slide 	= block.settings.make_link_full_slide -%}
						{%- assign second_button_text       = block.settings.second_button_text -%}
						{%- assign second_button_aria_label = block.settings.second_button_aria_label -%}
						{%- assign second_button_link 		= block.settings.second_button_link -%}
						{%- assign second_open_in_new_tab 	= block.settings.second_open_in_new_tab -%}

						{%- assign enable_parallax = false -%}

						{%- if parallax -%}
							{%- assign enable_parallax = true -%}
						{%- endif -%}

						{%- assign text_alignment_inside_block_desktop 	= block.settings.text_alignment_inside_block_desktop | default: 'center' -%}
						{%- assign text_alignment_inside_block_mobile 	= block.settings.text_alignment_inside_block_mobile | default: 'center' -%}
						{%- assign content_alignment_horizontal_desktop = block.settings.content_alignment_horizontal_desktop | default: 'center' -%}
						{%- assign content_alignment_vertical_desktop   = block.settings.content_alignment_vertical_desktop | default: 'middle' -%}
						{%- assign content_alignment_vertical_mobile 	= block.settings.content_alignment_vertical_mobile | default: 'middle' -%}
						{%- assign background_color 					= block.settings.background_color -%}
						{%- assign page_background_rgba    				= page_background | hex_to_rgba -%}
						{%- assign background_color_rgba   				= background_color | hex_to_rgba -%}
						{%- assign background_content 					= block.settings.background_content -%}
						{%- assign enable_glass_effect 					= block.settings.enable_glass_effect -%}
						{%- assign heading_color 						= block.settings.heading_color -%}
						{%- assign description_color 					= block.settings.description_color -%}
						{%- assign button_text_color 					= block.settings.button_text_color -%}
						{%- assign button_background_color 				= block.settings.button_background_color -%}
						{%- assign button_border_color 					= block.settings.button_border_color -%}
						{%- assign button_text_color_hover 				= block.settings.button_text_color_hover -%}
						{%- assign button_background_color_hover 		= block.settings.button_background_color_hover -%}
						{%- assign button_border_color_hover 			= block.settings.button_border_color_hover -%}
						{%- assign second_button_text_color 			= block.settings.second_button_text_color -%}
						{%- assign second_button_background_color 		= block.settings.second_button_background_color -%}
						{%- assign second_button_border_color 			= block.settings.second_button_border_color -%}
						{%- assign second_button_text_color_hover 		= block.settings.second_button_text_color_hover -%}
						{%- assign second_button_background_color_hover = block.settings.second_button_background_color_hover -%}
						{%- assign second_button_border_color_hover 	= block.settings.second_button_border_color_hover -%}
						{%- assign overlay_color 						= block.settings.overlay_color -%}
						{%- assign product_card_text_color 				= block.settings.product_card_text_color -%}
						{%- assign product_card_sale_price_color 		= block.settings.product_card_sale_price_color -%}
						{%- assign product_card_compare_at_price_color 	= block.settings.product_card_compare_at_price_color -%}

						{%- assign poster_desktop 						= block.settings.poster_desktop -%}
						{%- assign poster_mobile 						= block.settings.poster_mobile | default: poster_desktop -%}

						{%- case content_alignment_horizontal_desktop -%}
							{%- when 'left' -%}
								{%- assign content_alignment_horizontal_desktop = 'flex-start' -%}
							{%- when 'right'-%}
								{%- assign content_alignment_horizontal_desktop = 'flex-end' -%}
							{%- else -%}
								{%- assign content_alignment_horizontal_desktop = 'center' -%}
						{% endcase %}

						{%- case content_alignment_vertical_desktop -%}
							{%- when 'top' -%}
								{%- assign content_alignment_vertical_desktop = 'flex-start' -%}
							{%- when 'bottom'-%}
								{%- assign content_alignment_vertical_desktop = 'flex-end' -%}
								{%- else -%}
								{%- assign content_alignment_vertical_desktop = 'center' -%}
						{% endcase %}

						{%- case content_alignment_vertical_mobile -%}
							{%- when 'top' -%}
								{%- assign content_alignment_vertical_mobile = 'flex-start' -%}
							{%- when 'bottom'-%}
								{%- assign content_alignment_vertical_mobile = 'flex-end' -%}
								{%- else -%}
								{%- assign content_alignment_vertical_mobile = 'center' -%}
						{% endcase %}

						{%- assign enable_lazy_load = true -%}
						{%- assign enable_fetch_priority = false -%}

						{%- if section.index == 1 and forloop.index == 1 -%}
							{%- assign enable_lazy_load = false -%}
							{%- assign enable_fetch_priority = true -%}
						{%- endif %}

						{%- if enable_glass_effect == true or background_content != blank -%}
							{%- assign enable_content_offset = true -%}
						{%- endif -%}

						{%- capture slide_styles -%}
							--text-alignment-desktop: {{- text_alignment_inside_block_desktop | replace: "left", "start" | replace: "right", "end" -}}; {{-  -}}
							--text-alignment-mobile: {{- text_alignment_inside_block_mobile | replace: "left", "start" | replace: "right", "end" -}}; {{-  -}}
							--content-alignment-horizontal-desktop: {{- content_alignment_horizontal_desktop -}}; {{-  -}}
							--content-alignment-vertical-mobile: {{- content_alignment_vertical_mobile -}}; {{-  -}}
							--content-alignment-vertical-desktop: {{- content_alignment_vertical_desktop -}}; {{-  -}}
							--background-color: {{ background_color -}}; {{-  -}}
							--background-content: {{ background_content -}}; {{-  -}}
							--heading-color: {{ heading_color -}}; {{-  -}}
							--description-color: {{ description_color -}}; {{-  -}}
							--button-text-color: {{ button_text_color -}}; {{-  -}}
							--button-background-color: {{ button_background_color -}}; {{-  -}}
							--button-border-color: {{ button_border_color -}}; {{-  -}}
							--button-text-color-hover: {{ button_text_color_hover -}}; {{-  -}}
							--button-background-color-hover: {{ button_background_color_hover -}}; {{-  -}}
							--button-border-color-hover: {{ button_border_color_hover -}}; {{-  -}}
							--second-button-text-color: {{ second_button_text_color -}}; {{-  -}}
							--second-button-background-color: {{ second_button_background_color -}}; {{-  -}}
							--second-button-border-color: {{ second_button_border_color -}}; {{-  -}}
							--second-button-text-color-hover: {{ second_button_text_color_hover -}}; {{-  -}}
							--second-button-background-color-hover: {{ second_button_background_color_hover -}}; {{-  -}}
							--second-button-border-color-hover: {{ second_button_border_color_hover -}}; {{-  -}}
							--overlay-color: {{ overlay_color -}}; {{-  -}}
							--product-card-text-color: {{ product_card_text_color -}}; {{-  -}}
							--product-card-sale-price-color: {{ product_card_sale_price_color -}}; {{-  -}}
							--product-card-compare-at-price-color: {{ product_card_compare_at_price_color -}}; {{-  -}}
						{%- endcapture -%}

						<div
								class="slideshow__slide swiper-slide"
								style="{{- slide_styles -}}"
								data-slide-index="{{ forloop.index0 }}"
								{{ block.shopify_attributes }}
						>
							{%- if effect == 'flip' -%}
								<div class="swiper-slide-shadow-right"></div>
								<div class="swiper-slide-shadow-left"></div>
							{%- elsif effect == 'creative' -%}
								<div class="swiper-slide-shadow"></div>
							{%- endif -%}

							{%- if poster_desktop != blank -%}
								<div class="slideshow__slide-poster slideshow__slide-poster--mobile js-video-poster-mobile">
									{%- render "slideshow-slide-image",
											image_mobile: poster_mobile,
											image_desktop: poster_mobile,
											placeholder_index: forloop.index0,
											enable_lazy_load: enable_lazy_load,
											enable_fetch_priority: enable_fetch_priority
									-%}
								</div>

								<div class="slideshow__slide-poster slideshow__slide-poster--desktop js-video-poster-desktop">
									{%- render "slideshow-slide-image",
											image_mobile: poster_desktop,
											image_desktop: poster_desktop,
											placeholder_index: forloop.index0,
											enable_lazy_load: enable_lazy_load,
											enable_fetch_priority: enable_fetch_priority
									-%}
								</div>
							{%- endif -%}

							{%- case block.type  -%}
								{% when "image" -%}
									{%- assign image_desktop 	= block.settings.image_desktop -%}
									{%- assign image_mobile 	= block.settings.image_mobile | default: image_desktop-%}

									{% if button_link != blank and make_link_full_slide %}
										<a href="{{ button_link }}"
										   class="slideshow__link-full"
										   aria-label="{{ button_aria_label }}"
											{% if open_in_new_tab %}
												target="_blank"
												rel="nofollow"
											{% endif %}
										></a>
									{% endif %}

									{%- render "slideshow-slide-image",
										image_mobile: image_mobile,
										image_desktop: image_desktop,
										placeholder_index: forloop.index0,
										enable_lazy_load: enable_lazy_load,
										enable_fetch_priority: enable_fetch_priority
									-%}

									<div class="slideshow__slide-media-overlay"></div>

									<div class="slideshow__slide-box {% if enanle_thumbnails == true %}slideshow__slide-box--thumbnails-offset{% endif %}">
										{%- render 'slideshow-slide-content',
											enable_content_offset: enable_content_offset,
											enable_glass_effect: enable_glass_effect,
											enable_parallax: enable_parallax,
											heading: heading,
											description: description,
											button_text: button_text,
											button_link: button_link,
											button_aria_label: button_aria_label,
											open_in_new_tab: open_in_new_tab,
											second_button_text: second_button_text,
											second_button_link: second_button_link,
											second_button_aria_label: second_button_aria_label,
											second_open_in_new_tab: second_open_in_new_tab,
											index: forloop.index
										-%}
									</div>
								{% when "html_video" -%}
									{%- assign video_desktop		= block.settings.video_desktop -%}
									{%- assign video_mobile			= block.settings.video_mobile | default: video_desktop -%}
									{%- assign poster_desktop 		= block.settings.poster_desktop -%}
									{%- assign poster_mobile 		= block.settings.poster_mobile | default: poster_desktop -%}
									{%- assign play_type 			= block.settings.autoplay -%}
									{%- assign show_button 			= true -%}
									{%- assign autoplay 			= true -%}

									{%- if play_type == "autoplay"  -%}
										{%- assign show_button	= false -%}
									{%- endif -%}

									{%- if play_type == "button"  -%}
										{%- assign autoplay	= false -%}
									{%- endif -%}

									{% if button_link != blank and make_link_full_slide %}
										<a href="{{ button_link }}"
										   class="slideshow__link-full"
										   aria-label="{{ button_aria_label }}"
											{% if open_in_new_tab %}
												target="_blank"
												rel="nofollow"
											{% endif %}
										></a>
									{% endif %}

									{%- if video_desktop != blank -%}
										<div class="slideshow__slide-videos need-animate js-videos" data-show-button="{{- show_button -}}">
											<video
													class="slideshow__slide-media slideshow__slide-media--desktop js-video"
													data-device="desktop"
													data-type="html"
													loop
													muted
													playsinline
													tabindex="-1"
													aria-hidden="true"
													data-autoplay="{{- autoplay -}}"
											>
												{%- for source in video_desktop.sources -%}
													{%- if source.mime_type == 'video/mp4' -%}
														<source src="{{- source.url -}}" type="{{- source.mime_type -}}">
													{%- endif -%}
												{%- endfor -%}
											</video>

											<video
													class="slideshow__slide-media slideshow__slide-media--mobile js-video"
													data-device="mobile"
													data-type="html"
													loop
													muted
													playsinline
													tabindex="-1"
													aria-hidden="true"
													data-autoplay="{{- autoplay -}}"
											>
												{%- for source in video_mobile.sources -%}
													{%- if source.mime_type == 'video/mp4' -%}
														<source src="{{- source.url -}}" type="{{- source.mime_type -}}">
													{%- endif -%}
												{%- endfor -%}
											</video>
										</div>
									{%- else -%}
										{%- assign placeholder_index = forloop.index0 | modulo: 3 | plus: 1 -%}
										{%- assign placeholer_svg_name = 'hero-apparel-' | append: placeholder_index -%}

										{{- placeholer_svg_name | placeholder_svg_tag: 'slideshow__slide-media  slideshow__slide-media--placeholder' -}}
									{%- endif -%}

									<div class="slideshow__slide-media-overlay"></div>

									<div class="slideshow__slide-box {% if enanle_thumbnails == true %}slideshow__slide-box--thumbnails-offset{% endif %}">
										{%- render 'slideshow-slide-content',
											enable_content_offset: enable_content_offset,
											enable_glass_effect: enable_glass_effect,
											enable_parallax: enable_parallax,
											heading: heading,
											description: description,
											button_text: button_text,
											button_link: button_link,
											button_aria_label: button_aria_label,
											open_in_new_tab: open_in_new_tab,
											second_button_text: second_button_text,
											second_button_link: second_button_link,
											second_button_aria_label: second_button_aria_label,
											second_open_in_new_tab: second_open_in_new_tab,
											index: forloop.index
										-%}
									</div>

