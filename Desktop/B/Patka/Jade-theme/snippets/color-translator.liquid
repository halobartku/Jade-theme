{%- if color_name -%}
  {%- assign color_lower = color_name | downcase -%}
  {%- for translation in color_translations -%}
    {%- assign parts = translation | split: "|" -%}
    {%- assign english = parts[0] | downcase | strip -%}
    {%- assign polish = parts[1] | strip -%}
    {%- if english == color_lower -%}
      {{- polish -}}
      {%- break -%}
    {%- endif -%}
  {%- endfor -%}
{%- endif -%}

